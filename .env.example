# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# Database Configuration
DB_HOST=pg-dosm.postgres.database.azure.com
DB_USER=dosm_admin
DB_PASSWORD=<your-secure-password>
DB_DEV_NAME=dosm-faq-chatbot-dev-postgres
DB_PROD_NAME=dosm-faq-chatbot-prod-postgres

# Database URLs (with URL-encoded password)
DEV_DATABASE_URL=postgresql://${DB_USER}:<url-encoded-password>@${DB_HOST}:5432/${DB_DEV_NAME}?sslmode=require
PROD_DATABASE_URL=postgresql://${DB_USER}:<url-encoded-password>@${DB_HOST}:5432/${DB_PROD_NAME}?sslmode=require

# API Keys
DEV_API_KEY=<your-dev-api-key>
PROD_API_KEY=<your-prod-api-key>

# MLflow
MLFLOW_TRACKING_URI=http://20.6.121.120:5000

# Azure
AZURE_SUBSCRIPTION_ID=<your-subscription-id>
AZURE_TENANT_ID=<your-tenant-id>

# Note: For URL encoding special characters in passwords:
# @ becomes %40
# ! becomes %21
# # becomes %23
# $ becomes %24
# % becomes %25
# ^ becomes %5E
# & becomes %26
# * becomes %2A
